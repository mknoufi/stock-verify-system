# ============================================================================
# Stock Verify Application - Environment Configuration (Development)
# ============================================================================
# SECURITY WARNING: Never commit actual .env files to version control!
# This is a template file. Copy to .env and fill in your actual values.
# ============================================================================

# ----------------------------------------------------------------------------
# MongoDB Configuration (REQUIRED)
# ----------------------------------------------------------------------------
MONGO_URL=mongodb://127.0.0.1:27017
DB_NAME=stock_verification

# ----------------------------------------------------------------------------
# JWT Configuration (REQUIRED - CRITICAL SECURITY)
# ----------------------------------------------------------------------------
# IMPORTANT: Generate secure secrets using: python backend/utils/secret_generator.py
# These MUST be set via environment variables in production
# Minimum 32 characters, use cryptographically secure random strings
JWT_SECRET=GENERATE_SECURE_SECRET_HERE_MIN_32_CHARS
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_SECURE_SECRET_HERE_MIN_32_CHARS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# ----------------------------------------------------------------------------
# SQL Server Configuration (Optional - for ERP integration)
# ----------------------------------------------------------------------------
# Leave empty if not using SQL Server ERP integration
SQL_SERVER_HOST=
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=
SQL_SERVER_USER=
SQL_SERVER_PASSWORD=

# Optional: Performance tuning
# SYNC_BATCH_SIZE=1000
# PARALLEL_SYNC_WORKERS=4

# ----------------------------------------------------------------------------
# Redis Configuration (Optional - recommended for production)
# ----------------------------------------------------------------------------
# Uncomment and configure if using Redis for caching
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
ENVIRONMENT=development
APP_NAME=Stock Count API
APP_VERSION=2.0.0

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ----------------------------------------------------------------------------
# Cache Configuration
# ----------------------------------------------------------------------------
CACHE_TTL=3600

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20
MAX_CONCURRENT=50

# ----------------------------------------------------------------------------
# Connection Pool
# ----------------------------------------------------------------------------
USE_CONNECTION_POOL=true
POOL_SIZE=10
MAX_OVERFLOW=5

# ----------------------------------------------------------------------------
# Sync Services
# ----------------------------------------------------------------------------
ERP_SYNC_ENABLED=false
CHANGE_DETECTION_SYNC_ENABLED=true
CHANGE_DETECTION_INTERVAL=300

# ----------------------------------------------------------------------------
# CORS Configuration (Development)
# ----------------------------------------------------------------------------
# Add your frontend URLs here (comma-separated)
# Example: http://192.168.0.103:8081,exp://192.168.0.103:8081
CORS_DEV_ORIGINS=http://localhost:8081,exp://localhost:8081
