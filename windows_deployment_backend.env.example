# ========================================
# BACKEND PRODUCTION CONFIGURATION
# ========================================
# Rename this file to ".env" in your backend directory

# Application
ENVIRONMENT=production
APP_NAME=Stock Verify API
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# MongoDB (REQUIRED)
# This assumes MongoDB is running on the same machine on its default port.
MONGO_URL=mongodb://localhost:27017/stock_verify
DB_NAME=stock_verify

# JWT Security (REQUIRED - Replace with strong, random secrets)
JWT_SECRET=YOUR_SUPER_SECRET_RANDOM_STRING_HERE
JWT_REFRESH_SECRET=ANOTHER_SUPER_SECRET_RANDOM_STRING_HERE
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (CRITICAL - Whitelist the frontend URL)
# Use http://localhost:3000 for the native http-server.
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
